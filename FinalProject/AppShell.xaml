<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FinalProject.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FinalProject.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="FinalProject">

    <TabBar>
        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:HomePage}"
        Route="MainPage" />

        <ShellContent
        Title="Live Broadcast"
        ContentTemplate="{DataTemplate local:LiveBroadcast}"
        Route="LiveBroadcast" />

        <ShellContent
        Title="Live Scores"
        ContentTemplate="{DataTemplate local:LiveScores}"
        Route="LiveScores" />
    </TabBar>

</Shell>
